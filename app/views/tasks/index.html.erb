<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
  <div>
    <i class="far fa-check-square"></i>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="far fa-trash-alt"></i>
        <%= link_to "✂️", task_path(task), method: :delete %>
      <% end %>
  </div>

  <% else %>
    <div>
      <i class="far fa-square"></i>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="far fa-trash-alt"></i>
        <%= link_to "✂️", task_path(task), method: :delete %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Create a task', tasks_new_path %>
