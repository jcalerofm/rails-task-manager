<h2><%= @task.title %></h2>

<div>

<i class='far fa-edit'></i><%= link_to 'Edit task', edit_path %>

<p><%= @task.details%>
  <%= link_to "✂️", task_path(@task), method: :delete %>
</p>

<% if @task.completed %>
  <p>
    <i class="far fa-check-square"></i> Completed!
  </p>
<% else %>
  <p>
    <i class="far fa-square"></i> This task is not completed yet.
  </p>
<% end %>

<%= link_to 'Back to list', tasks_path %>

</div>
